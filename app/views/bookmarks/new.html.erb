<h2>Create a New Bookmark for the category ... <%= @list.name %></h2>

<%= form_for [@list, @bookmark] do |f| %>
  <div class="form-group">
    <%= f.label :movie_id %>
    <%= f.collection_select :movie_id, @movies, :id, :title, prompt: "Select a movie", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :comment %>
    <%= f.text_area :comment, class: "form-control" %>
  </div>
<br>
  <%= f.button :submit %>
<% end %>
<br>
<br>

<%=link_to "Back to List", list_path(@list), class: "btn btn-danger" %>
